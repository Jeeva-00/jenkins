pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        echo 'building the code......'
      }
    }

    stage('test') {
      steps {
        echo 'testing the code....'
      }
    }

    stage('deployment') {
      steps {
        echo 'deploying the code....'
      }
    }

    stage('sending notification'){
      steps{
        echo 'notification sent...'
      }
    }  

  }
}
